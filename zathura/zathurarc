# general
set recolor true
set guioptions ""
set page-padding 3
set adjust-open width
set render-loading true
set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-home-tilde true
set window-title-basename true
set selection-notification false
set selection-clipboard clipboard
set font "JetBrainsMono Nerd Font Mono Regular"

# colorscheme
include "colors/dracula"

# navigation
map u scroll half-up
map d scroll half-down
map L navigate next
map H navigate previous
map <Space> navigate next
map <S-Space> navigate previous

# zoom
map J zoom in
map K zoom out

# toggles
map b toggle_statusbar
map D toggle_page_mode

# other
map i recolor
map p print
map r reload
map R rotate

# local customizations
include "zathurarc_local"
